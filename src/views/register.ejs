<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/style.css">
    <title>Register</title>
</head>
<body>
    <div class="register-form">
        <h1>Registration</h1>
        <form action="/register" method="post" enctype="multipart/form-data">
            <label for="user">User</label>
            <input type="text" name="user" value="<% if(typeof valores != 'undefined') { %><%= valores.user %><%}%>"">
            
            <label for="name">Full Name</label>
            <input type="text" name="name" value="<% if(typeof valores != 'undefined') { %><%= valores.name %><%}%>">
            
            <label for="rol">Rol</label>
            <select name="rol" id="rol" class="select-css">
                <option value="admin" selected>Admin</option>
                <option value="data entry">Data entry</option>
            </select>

            <label for="pass">Password</label>
            <input type="password" name="pass" value="<% if(typeof valores != 'undefined') { %><%= valores.pass %><%}%>">

            <label for="avatar">Avatar</label>
            <input type="file" name="avatar" accept=".gif,.jpg,.jpeg,.png" >


            <div style="display: inline;">
                <a href="/" class="btn-cancel">Cancel</a><input type="submit" class="btn-save" value="Save"> 
            </div>
        </form>
        <% if(typeof validaciones != 'undefined') { %>
            <% validaciones.forEach( (validacion)=> { %>                 
              <div class="toast-container">
            <div class="toast" role="alert" aria-live="assertive" data-bs-autohide="false">
                <div class="toast-header">
                  <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#007aff"></rect></svg>
                  <strong class="me-auto">¡Atención!</strong>                 
                  <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                  <strong><%= validacion.msg %></strong> 
                </div>
            </div>
              </div>              
              <% }) %>
          <% } %>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") {%>
        <script>
        swal.fire({
            title:'<%= alertTitle %>',
            text:'<%= alertMessage %>',
            icon:'<%=alertIcon %>',
            showConfirmButton:'<%=showConfirmButton %>',
            timer:'<%=timer %>'
        }).then(()=>{
            window.location='<%=ruta %>'
        })
        </script> 
        <% } %> 
        <script>
            document.addEventListener('DOMContentLoaded', function () {
              var toastElList = [].slice.call(document.querySelectorAll('.toast'))
              var toastList = toastElList.map(function(toastEl) {    
              return new bootstrap.Toast(toastEl)
              });
              toastList.forEach(toast => toast.show());
            });
            </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    
</body>
</html>